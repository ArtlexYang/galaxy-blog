/**
 * TypeScript的配置文件（命令tsc）
 */
{
  // 编译时的设置
  "compilerOptions": {
    "outDir": "build/dist",  // 指定ts文件编译后的位置
    "module": "esnext",  // 指定生成哪个模块系统代码
    "target": "esnext",  // 编译的目标：遵循es6的js（与下方"allowJs": true同时起作用）
    "lib": ["esnext", "dom"],  // 编译过程中需要引入的库文件的列表
    "sourceMap": true,  // 记录原始代码位置，方便出错后查找
    "baseUrl": ".",  // 解析非相对模块名的基准目录
    "jsx": "react-jsx",  // 在.tsx文件里支持JSX
    "allowSyntheticDefaultImports": true,  // 允许从没有设置默认导出的模块中默认导入
    "moduleResolution": "node",  // 决定如何处理模块。"Node"对于Node.js/io.js
    "forceConsistentCasingInFileNames": true,  // 禁止对同一个文件的不一致的引用
    "noImplicitReturns": true,  // 返回值需要定义类型
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,  // 不允许未使用的变量存在
    "allowJs": true,  // 允许编译js文件
    "skipLibCheck": true,  // 忽略所有的声明文件（*.d.ts）的类型检查
    "experimentalDecorators": true,  // 启用实验性的ES装饰器
    "strict": true,  // 严格模式
    "paths": {  // 模块名到基于 baseUrl的路径映射的列表（与上方"baseUrl": "."同时起作用）
      "@/*": ["./src/*"],
      "@@/*": ["./src/.umi/*"]
    }
  },
  // 编译的文件
  "include": [
    "mock/**/*",
    "src/**/*",
    "tests/**/*",
    "test/**/*",
    "__test__/**/*",
    "typings/**/*",
    "config/**/*",
    ".eslintrc.js",
    ".stylelintrc.js",
    ".prettierrc.js",
    "jest.config.js",
    "mock/*"
  ],
  // 不编译的文件
  "exclude": ["node_modules", "build", "dist", "scripts", "src/.umi/*", "webpack", "jest"]
}
